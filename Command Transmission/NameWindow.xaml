<Window x:Class="Command_Transmission.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Command_Transmission"
        mc:Ignorable="d"
        Title="NameWindow" Height="150" Width="150">
    <Grid>
        <StackPanel>

            <TextBlock x:Name="OldName" Width="100" HorizontalAlignment="Left" Margin="5,10,0,0"></TextBlock>

            <TextBlock Text="New Name:" Width="100" HorizontalAlignment="Left" Margin="5,10,0,0"></TextBlock>

            <TextBox x:Name="NameBox" Width="100" HorizontalAlignment="Left" Margin="5,10,0,0"></TextBox>

            <WrapPanel Margin="5,5,0,0">
                <Button x:Name="EnterButton" Content="Enter" Click="EnterButton_Click" Width="50" Height="20" IsDefault="True" ></Button>
                <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="50" Height="20" Margin="10,0,0,0" IsCancel="True"></Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
