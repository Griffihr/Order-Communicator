<Window x:Class="Command_Transmission.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Command_Transmission"
        mc:Ignorable="d"
        Title="Simulator Command Communicator" Height="720" Width="1280" FontFamily="Seoge UI Light">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="DG1" HorizontalAlignment="Right" Margin="10,10,0,0" Width="1000" Height="500" Grid.Column="3" Grid.Row="1" Grid.RowSpan="8"  
                  CanUserDeleteRows="True" CanUserAddRows="False" AutoGenerateColumns="False" ItemsSource="{Binding Command_Struct}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Maxtid" Binding="{Binding MaxTid}"/>
                <DataGridTextColumn Header="Antal Uppdrag" Binding="{Binding AntalUpdr}"/>
                <DataGridTextColumn Header="Maxantal / h" Binding="{Binding MaxUpdrH}"/>
                <DataGridTextColumn Header="Körd / h" Binding="{Binding KördH}"/>
                <DataGridTextColumn Header="Upphämtnings Adr" Binding="{Binding UppAddr}"/>
                <DataGridTextColumn Header="Avlämnings Adr" Binding="{Binding AvAddr}"/>
                <DataGridTextColumn Header="Start-Ts" Binding="{Binding StartTs}"/>
                <DataGridTextColumn Header="Prio" Binding="{Binding Prio}"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="Ip-Adress" Height="25" Width="100" FontSize="15" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="10,10" HorizontalAlignment="Left"></TextBlock>
        <TextBox x:Name="Ip_Adress" Text="0.0.0.0" Height="25" Width="200" Margin="0,10" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom"></TextBox>

        <TextBlock Text="Port" Height="25" Width="100" FontSize="15" Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="10,10" HorizontalAlignment="Left"></TextBlock>
        <TextBox x:Name="Port" Height="25" Width="200" Margin="0,10" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom"></TextBox>

        <Button x:Name="Connect_Button" HorizontalAlignment="Left" Content="Connect" Click="Connect_Button_Click" Height="25" Width="100" Grid.Row="3" Grid.Column="1"></Button>

        <Button x:Name="Add_Button" Content="Add" Click="Add_button_Click" Height="50" Width="100" Grid.Row="4" Grid.Column="1" ></Button>

        <TextBlock x:Name="Connect" Width="100" Height="50" Grid.Column="1" Grid.Row="6" FontSize="10" ></TextBlock>

        <Button x:Name="Start_Button" Content="Start" Click="Start_Button_Click" Width="100" Height="50" Grid.Column="1" Grid.Row="7" ></Button>

        <TextBlock x:Name="Timer" Text="00:00:00" Height="50" Width="100" Grid.Column="2" Grid.Row="5" ></TextBlock>
    </Grid>
</Window>
