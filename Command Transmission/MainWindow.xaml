<Window x:Class="Command_Transmission.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Command_Transmission"
        mc:Ignorable="d"
        Title="Simulator Command Communicator" Height="720" Width="1280" FontFamily="Seoge UI Light">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="DataGridWpf" HorizontalAlignment="Right" Margin="10,10,0,0" Width="1000" Height="500" Grid.Column="3" Grid.Row="1" CanUserAddRows="True" CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"/>
                <DataGridTextColumn Header="Maxtid"/>
                <DataGridTextColumn Header="Gånger"/>
                <DataGridTextColumn Header="Maxantal / h"/>
                <DataGridTextColumn Header="Körd / h" IsReadOnly="True"/>
                <DataGridTextColumn Header="Upphämtnings Adr"/>
                <DataGridTextColumn Header="Avlämnings Adr"/>
                <DataGridTextColumn Header="Start-Ts"/>
                <DataGridTextColumn Header="Prio"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Column="1" Grid.Row="1" Content="Connect" Width="100" Height="50"></Button>

        <Button x:Name="Add_Button" Content="Add" Width="100" Height="50" Grid.Column="1" Grid.Row="5"></Button>
        <Button x:Name="Remove_Button" Content="Remove" Width="100" Height="50" Grid.Column="2" Grid.Row="5"></Button>
    </Grid>
</Window>
